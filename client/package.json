{
  "name": "ClipShip",
  "version": "0.0.1",
  "description": "Simple Twitch Compilation Editor",
  "private": true,
  "dependencies": {
    "@clipship/common": "^1.0.7",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.20.6",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "axios": "^0.21.1",
    "js-file-download": "^0.4.12",
    "lodash": "^4.17.21",
    "react": "^17.0.1",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.3",
    "react-scripts": "4.0.3",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.3",
    "typescript": "^4.2.3",
    "web-vitals": "^1.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/utils/**/*.ts",
      "<rootDir>/src/store/**/*.ts",
      "!<rootDir>/src/components/**/*.tsx",
      "!<rootDir>/node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test-coverage": "react-scripts test --watchAll=false --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && npm run build && lint-staged && npm run test",
      "pre-push": "export CI=true && npm run build && lint-staged && npm run test-coverage"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/lodash": "^4.14.168",
    "@types/node-fetch": "^2.5.10",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/redux-devtools-extension": "^2.13.2",
    "@types/redux-mock-store": "^1.0.2",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "axios-mock-adapter": "^1.19.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "redux-mock-store": "^1.5.4"
  }
}
