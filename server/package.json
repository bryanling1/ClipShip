{
  "name": "clip-ship-sever",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --poll --respawn --interval 1000 src/index.ts ",
    "test": "jest --watchAll=false --no-chache",
    "test-coverage": "jest --watchAll=false --coverage --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/routes/**/*.ts",
      "!<rootDir>/node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && lint-staged && npm run test",
      "pre-push": "export CI=true && lint-staged && npm run test-coverage"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.12.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/mongoose": "^5.10.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.6",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1"
  }
}
